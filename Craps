import random


# checking win/lose
def checkWin(res):
  if res in winNums:
    print("You win")
    return
  
  if res in craps:
    print("You lose")
    return
  
  if res in goalNums:
    goal = res
    print(f"Now your goal number is {res}")
    num1 = random.choice(nums)
    num2 = random.choice(nums)
    res = int(input(f"The sum of dice is {num1} + {num2} = "))
    
    if res in winNums:
      print("You lose")
      return
    
    while True:
      num1 = random.choice(nums)
      num2 = random.choice(nums)
      res = int(input(f"The sum of dice is {num1} + {num2} = "))
      
      if res in winNums:
        print("You lose")
        return
      if res is goal:
        num1 = random.choice(nums)
        num2 = random.choice(nums)
        res = int(input(f"The sum of dice is {num1} + {num2} = "))
        
        if res in winNums:
          print("You win")
          return
        if res in craps:
          print("You lose")
          return
        goal = res
        print(f"Now your goal number is {res}")
      
winNums:int = [7, 11]
craps:int = [2, 3, 12]
goalNums:int = [4, 5, 6, 8, 9, 10]
nums:int = [1, 2, 3, 4, 5, 6]

num1:int = random.choice(nums)
num2:int = random.choice(nums)
result:int = int(input(f"The sum of dice is {num1} + {num2} = "))

checkWin(result)
